{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "module": "ES2022",
    "target": "ES6"
  },
  "include": ["**/*.ts", "jest.config.js"]
}
